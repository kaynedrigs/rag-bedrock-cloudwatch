{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowKBListDocs",
      "Effect": "Allow",
      "Action": "s3:ListBucket",
      "Resource": "arn:aws:s3:::YOUR_S3_BUCKET",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "docs",
            "docs/*"
          ]
        }
      }
    },
    {
      "Sid": "AllowKBGetDocs",
      "Effect": "Allow",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::YOUR_S3_BUCKET/docs/*"
    },
    {
      "Sid": "AllowBedrockInvokeForEmbeddings",
      "Effect": "Allow",
      "Action": [
        "bedrock:InvokeModel",
        "bedrock:InvokeModelWithResponseStream"
      ],
      "Resource": [
        "arn:aws:bedrock:YOUR_REGION::foundation-model/amazon.titan-embed-text-v1",
        "arn:aws:bedrock:YOUR_REGION::foundation-model/*"
      ]
    },
    {
      "Sid": "AllowS3Vectors",
      "Effect": "Allow",
      "Action": [
        "s3vectors:QueryVectors",
        "s3vectors:GetVectors",
        "s3vectors:PutVectors",
        "s3vectors:DeleteVectors",
        "s3vectors:ListIndexes"
      ],
      "Resource": "*"
    },
    {
      "Sid": "CloudWatchLogs",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "*"
    }
  ]
}